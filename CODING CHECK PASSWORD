package exercise;

import java.util.Scanner;

public class Exercise7 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//ch >= 'A' && ch <= 'Z'
		//ch >= '0' && ch <= '9'
		String password; 
		char ch;
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Create a password with at least 8 letters including numbers : ");
		password= scan.nextLine();
		
		for (int i = 0; i < password.length(); i++) {
			ch = password.charAt(i);
			
			if (password.length() <= 8)
				System.out.println("Password must be more than 8 letters.");
			
			if (ch >= 'A' && ch <= 'Z')
				System.out.println("Your password has letters");
			else 
				System.out.println("Password must contain letters");
			
			if (ch >= '0' && ch <= '9')
				System.out.println("Your password has numbers");
			else
				System.out.println("Password must contain numbers");
		}

	}

}

